<h1>管理者 <small>ホーム</small></h1>
<div class="row">
  <div class="col-sm-4">
    <h3>メニュー</h3>
    <h4><%= link_to "ユーザー", admin_users_path %> <small>- <%= "#{@count} ユーザー" %></small></h4>
    <hr/>
  </div>

  <div class="col-sm-4">
    <h3>最終サインアップ</h3>
    <ul class="list-unstyled">
      <% @last_signups.each do |user| %>
      <li class="list-padded-bottom">
        <%= link_to user.username, edit_admin_user_path(user) %><br/>
        <small><%= time_ago_in_words(user.created_at)%> 前</small>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="col-sm-4">
    <h3>最終ログイン</h3>
    <ul class="list-unstyled">
      <% @last_signins.each do |user| %>
      <li class="list-padded-bottom">
        <%= link_to user.username, edit_admin_user_path(user) %><br/>
        <small>
          <% unless user.last_sign_in_at.nil? %>
          <%= time_ago_in_words(user.last_sign_in_at)%> 前
          <% else %>
          無し
          <% end %>
        </small>
      </li>
      <% end %>
    </ul>
  </div>

</div>
